import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class TaskList {
    private static int taskNumber = 0;
    private static List<String> tasks = new ArrayList<>();

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        while (true) {
            System.out.print("Enter task name or 'quit' to exit: ");
            String taskName = scanner.nextLine();
            if (taskName.equalsIgnoreCase("quit")) {
                break;
            }
            addTask(taskName);
            System.out.println("Task added with number: " + taskNumber);
        }
        System.out.println("Final task list:");
        for (int i = 0; i < tasks.size(); i++) {
            System.out.println(i + ": " + tasks.get(i));
        }
    }

    public static void addTask(String taskName) {
        tasks.add(taskNumber + ": " + taskName);
        taskNumber++;
   }
public class TaskCapture {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter task description: ");
        String taskDescription = scanner.nextLine();
        if (taskDescription.length() <= 50) {
            System.out.println("Task successfully captured");
        } else {
            System.out.println("Please enter a task description of less than 50 characters");
            return;
        }

        System.out.print("Enter developer first name: ");
        String firstName = scanner.nextLine();

        System.out.print("Enter developer last name: ");
        String lastName = scanner.nextLine();

        System.out.println("Task assigned to " + firstName + " " + lastName);
    }
   public class TaskDuration {
   public static void main(String[] args) {
      Scanner input = new Scanner(System.in);

      System.out.print("Enter the estimated duration of the task in hours: ");
      double duration = input.nextDouble();

      System.out.println("The estimated duration of the task is " + duration + " hours.");
   }
public class TaskIDGenerator {
    public static void main(String[] args) {
        String taskName = "Implement new feature";
        int taskNumber = 13;
        String developerName = "John Smith";

        String taskNamePrefix = taskName.substring(0, 2);

        String developerNameSuffix = developerName.substring(developerName.length() - 3);

        String taskID = taskNamePrefix.toUpperCase() + ":" + taskNumber + ":" + developerNameSuffix.toUpperCase();

        System.out.println("TaskID: " + taskID);
    }

public class TaskStatus {
   public static void main(String[] args) {
      Scanner input = new Scanner(System.in);

      System.out.println("Select a task status:");
      System.out.println("1. ToDo");
      System.out.println("2. Done");
      System.out.println("3. Doing");

      int choice = input.nextInt();

      switch (choice) {
         case 1:
            System.out.println("Task status: ToDo");
            break;
         case 2:
            System.out.println("Task status: Done");
            break;
         case 3:
            System.out.println("Task status: Doing");
            break;
         default:
            System.out.println("Invalid choice.");
            break;
      }
   }
}


